<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/more"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageviewSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/search_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linearLayoutMoreProfile"
            android:weightSum="5"
            android:padding="10dp"
            android:background="@color/transparentBlack"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageviewAvatar"
                android:src="@drawable/user"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/textUsername"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Username"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textInfoUser"
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Xem thông tin"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <Button
            android:id="@+id/buttonOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/history"
            android:drawableRight="@drawable/next"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="Lịch sử đơn hàng"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey" />

        <Button
            android:id="@+id/buttonBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/bill"
            android:drawableRight="@drawable/next"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="Hóa đơn"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <Button
            android:id="@+id/buttonApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/restaurant"
            android:drawableRight="@drawable/next"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="Ứng dụng cho chủ quán"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey" />

        <Button
            android:id="@+id/buttonInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/add_user"
            android:drawableRight="@drawable/next"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="Mời bạn bè"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <Button
            android:id="@+id/buttonFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/email"
            android:drawableRight="@drawable/next"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="Góp ý"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey" />

        <Button
            android:id="@+id/buttonPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/settings"
            android:drawableRight="@drawable/next"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="Chính sách quy định"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey" />

        <Button
            android:id="@+id/buttonSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/question"
            android:drawableRight="@drawable/next"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="Cài đặt"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textColor="@color/red_light"
            android:textSize="16dp"
            app:backgroundTint="@null" />

        <TextView
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>